---
import MainLayout from "../layouts/MainLayout.astro";
// 关于页内容在 site.json 的 about 字段中配置。
import site from "../data/site.json";

const { about } = site;
---

<MainLayout title={site.pages.about.title}>
  <div class="max-w-3xl mx-auto py-10 px-4 sm:px-6">
    <section class="mb-16 sm:mb-20 text-center">
      <h1 class="text-3xl sm:text-4xl font-bold mb-4 sm:mb-6">{about.title}</h1>
      <p class="text-base sm:text-xl opacity-60 font-serif italic">
        {about.tagline}
      </p>
    </section>

    <section
      class="prose prose-orange max-w-none mb-16 sm:mb-20 font-serif leading-relaxed opacity-80 text-base sm:text-lg"
    >
      <p>
        {about.intro}
      </p>
    </section>

    <section class="mb-20">
      <h2 class="text-xl sm:text-2xl font-bold mb-8 sm:mb-12 flex items-center gap-3 sm:gap-4">
        <span class="w-12 h-px bg-[#2d2a26]/20"></span>
        {about.membersTitle}
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 sm:gap-12">
        {
          about.members.map((member) => (
            <div class="flex flex-col items-center text-center">
              <h3 class="text-lg sm:text-xl font-bold mb-3 sm:mb-4">{member.name}</h3>
              <div class="flex gap-3 sm:gap-4">
                {member.links.map((link) => (
                  <a
                    href={link.url}
                    class="text-xs sm:text-sm font-serif font-bold text-[#2d2a26] hover:text-orange-700 relative pb-1 transition-colors duration-300 group"
                  >
                    {link.label}
                    <span class="absolute bottom-0 left-0 w-0 h-px bg-orange-700 transition-all duration-300 ease-out group-hover:w-full" />
                  </a>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <section
      class="mb-16 sm:mb-20 bg-white p-6 sm:p-10 border border-[#2d2a26]/5 shadow-sm text-center rounded-2xl"
    >
      <h2 class="text-lg sm:text-xl font-bold mb-3 sm:mb-4">{about.contact.title}</h2>
      <p class="text-sm opacity-60 font-serif mb-5 sm:mb-6">
        {about.contact.description}
      </p>
      <a
        href={`mailto:${about.contact.email}`}
        class="text-lg sm:text-2xl font-bold text-orange-800 relative inline-block group hover:text-orange-900 transition-colors duration-300 break-all"
      >
        {about.contact.email}
        <span
          class="absolute bottom-0 left-0 w-0 h-px bg-orange-800 transition-all duration-300 ease-out group-hover:w-full"
        ></span>
      </a>
    </section>

    <section
      class="mb-8 bg-white p-6 sm:p-10 border border-[#2d2a26]/5 shadow-sm rounded-2xl"
    >
      <h2 class="text-lg sm:text-xl font-bold mb-8 sm:mb-12 text-center">{about.feedback.title}</h2>
      <p
        class="text-sm opacity-60 font-serif mb-8 sm:mb-12 text-center leading-relaxed"
      >
        {about.feedback.description}
      </p>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 sm:gap-12 max-w-lg mx-auto">
        {
          about.feedback.channels.map((channel) => (
            <div class="flex flex-col items-center">
              <h3 class="text-base sm:text-lg font-bold mb-3 sm:mb-4">{channel.title}</h3>
              <a
                href={channel.url}
                class="text-sm sm:text-base font-serif text-[#2d2a26] hover:text-orange-700 relative pb-1 transition-colors duration-300 group"
              >
                {channel.label}
                <span
                  class="absolute bottom-0 left-0 w-0 h-px bg-orange-700 transition-all duration-300 ease-out group-hover:w-full"
                ></span>
              </a>
            </div>
          ))
        }
      </div>
    </section>
  </div>
</MainLayout>
