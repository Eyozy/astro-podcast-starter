---
import themes from "../data/themes.json";
// 首页“探索主题”标题可在 site.json 中修改。
import site from "../data/site.json";
---

<section class="mb-16 sm:mb-24">
  <div
    class="flex items-center justify-between mb-8 sm:mb-12 border-b border-[#2d2a26]/10 pb-4"
  >
    <h2 class="text-2xl sm:text-3xl font-bold">{site.sections.themesTitle}</h2>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
    {
      themes.map((theme) => (
        <a href={`/themes#${theme.id}`} class="group block h-full">
          <div class="bg-white p-5 sm:p-6 lg:p-8 h-full rounded-3xl border border-[#2d2a26]/5 shadow-sm hover:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.08)] hover:-translate-y-1 transition-all duration-300 flex flex-col">
            <div class="mb-4">
              <h3 class="text-xl font-bold group-hover:text-orange-800 transition-colors mb-2">
                {theme.title}
              </h3>
              <p class="text-sm opacity-60 font-serif leading-relaxed line-clamp-3 mb-4 grow">
                {theme.description}
              </p>
            </div>

            <div class="mt-auto pt-4 border-t border-[#2d2a26]/5 flex flex-wrap gap-2">
              {(theme.representativeTags ?? []).map((tag) => (
                <span class="inline-block text-[10px] font-serif px-2 py-1 bg-[#f5f2ed] text-[#2d2a26]/70 rounded-md">
                  #{tag}
                </span>
              ))}
            </div>
          </div>
        </a>
      ))
    }
  </div>
</section>
